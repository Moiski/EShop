<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/EShop">
	<Resource 
	name="jdbc/EShop" 
	auth="Container"
	factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" 
	type="javax.sql.DataSource"
	driverClassName="com.mysql.jdbc.Driver" 
	url="jdbc:mysql://localhost:3306/eshop"
	connectionProperties="useUnicode=yes;characterEncoding=UTF-8;useSSL=false"
	username="root" 
	password="root" 
	maxActive="32" 
	maxIdle="8"
	maxWait="10000"
	/>
</Context>